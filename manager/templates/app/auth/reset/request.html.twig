{% extends 'auth.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include '_flashes.html.twig' %}

                        <h1>Сброс пароля</h1>

                        <h4>Введите Ваш email, туда будут отправлены инструкции по восстановлению пароля.</h4>

                        {{ form_start(form) }}

                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Введите Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="input-group mb-4">
                        <a href="{{ path('home') }}">Вспомнил пароль</a>
                        </div>

                        <button type="submit" class="btn btn-block btn-success">Восстановить пароль</button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
